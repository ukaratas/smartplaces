
@using sp.iot.core


@if (Items != null)
{
<div>

    <span class="text-nowrap">
        Save Response Detail
    </span>

     <table  class="table table-sm">
        <thead>
            <tr>
                <th>Aciklama</th>
                <th>Zaman</th>
            </tr>
        </thead>
        <tbody>
        @if (Items == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @foreach (var item in Items)
            {

                @switch (item.Type)
                {
                case SaveActionType.Information:
                    <tr class="table-info">
                        <td>@item.Action</td>
                        <td>@item.CreatedAt.ToString()</td>
                    </tr>
                    break;
                case SaveActionType.Warning:
                    <tr class="table-warning">
                        <td>@item.Action</td>
                        <td>@item.CreatedAt.ToString()</td>
                    </tr>
                    break;
                case SaveActionType.Success:
                    <tr class="table-success">
                        <td>@item.Action</td>
                        <td>@item.CreatedAt.ToString()</td>
                    </tr>
                    break;
                case SaveActionType.Error:
                    <tr class="table-error">
                        <td>@item.Action</td>
                        <td>@item.CreatedAt.ToString()</td>
                    </tr>
                    break;
                default:
                    <tr class="table-primary">
                        <td>@item.Action</td>
                        <td>@item.CreatedAt.ToString()</td>
                    </tr>
                    break;
                }

            }
        }
        </tbody>
    </table>

</div>
}
@code {
    [Parameter]
    public bool Display { get; set; }

    [Parameter]
    public List<SaveResponseAction> Items { get; set; }

}
